public class PrimeGen {
	private int prevPrime = 0;

	public int nextPrime() {
		int nPrime = prevPrime + 1;
		while (!(isPrime(nPrime))) {
			nPrime++;
		}
		prevPrime = nPrime;
		return nPrime;
	}

	static boolean isPrime(int n) {

		if (n % 2 == 0)
			return false;

		for (int i = 3; i * i <= n; i += 2) {
			if (n % i == 0)
				return false;
		}
		return true;
	}
}
